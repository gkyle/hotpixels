[flake8]
max-line-length = 120
extend-ignore = E203,W503,W293,W291,E501,E722,F841,E128,E129
per-file-ignores =
    __init__.py:F401
    */ui/*:N802,N805,N806,N815,N816
    setup/lrcPath.py:N816
exclude =
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    notebook,
    hotpixels.lrdevplugin
